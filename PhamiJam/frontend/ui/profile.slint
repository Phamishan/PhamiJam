import { Button, VerticalBox, HorizontalBox, ProgressIndicator } from "std-widgets.slint";
import { page } from "common.slint";

export component Profile inherits Window {
    property <float> count: 0;
    property <bool> paused: true;
    property <string> songName: "SANG";
    timer := Timer {
        interval: 1ms;
        running: false;
        triggered() => {
            if count >= 10 {
                self.running = false;
            }
            count = count + 0.01;
            debug(count);
        }
    }

    GridLayout {
        Row {
            Rectangle {
                background: #121212;
                width: 150px;
                VerticalBox {
                    padding: 25px;
                    alignment: space-around;
                    Button {
                        text: "Home";
                        clicked() => {
                            page.activepage = 2;
                        }
                    }

                    Rectangle {
                        background: #3b3a3a;
                        height: 5px;
                    }

                    Button {
                        text: "Profile";
                        clicked() => {
                            page.activepage = 3;
                        }
                    }

                    Rectangle {
                        background: #3b3a3a;
                        height: 5px;
                    }

                    Text {
                        text: "Library";
                        horizontal-alignment: center;
                    }

                    Rectangle {
                        background: #3b3a3a;
                        height: 5px;
                    }

                    Text {
                        text: "%{recent playlist}%";
                        horizontal-alignment: center;
                    }
                }
            }

            Rectangle {
                HorizontalBox {
                    padding-top: 30px;
                    alignment: center;
                    Text {
                        text: "Now playing: " + songName;
                        font-size: 24px;
                    }

                    Button {
                        height: parent.height / 2;
                        icon: @image-url(".././assets/l.png");
                    }

                    Button {
                        height: parent.height / 2;
                        icon: paused ? @image-url(".././assets/play.png") : @image-url(".././assets/pause.png");
                        clicked() => {
                            paused = !paused;
                            timer.running = !paused;
                        }
                    }

                    Button {
                        height: parent.height / 2;
                        icon: @image-url(".././assets/r.png");
                    }
                }

                VerticalBox {
                    alignment: start;
                    padding-bottom: 100px;
                    ProgressIndicator {
                        padding-top: 100px;
                        height: 10px;
                        progress: count / 10;
                    }
                }

                background: #b5832e;
                height: 80px;
                colspan: 2;
                row: 1;
            }
        }
    }
}
