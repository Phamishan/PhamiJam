{
    "name": "PhamiJam",
    "version": "1.0.0",
    "description": "PhamiJam - Music for your ears",
    "author": "Phamishan Packiaseelan",
    "main": "src/main.js",
    "type": "module",
    "dependencies": {
        "dotenv": "^16.5.0",
        "jsonwebtoken": "^9.0.2",
        "music-metadata": "^11.2.0",
        "play-sound": "^1.1.6",
        "slint-ui": "^1.9.0",
        "sound-play": "^1.1.0"
    },
    "scripts": {
        "start": "node ."
    },
    "build": {
        "appId": "com.example.phamijam",
        "productName": "PhamiJam",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "ui/",
                "to": "ui"
            }
        ],
        "win": {
            "icon": "assets/p_icon.ico",
            "target": "nsis"
        },
        "mac": {
            "icon": "assets/icon.icns"
        },
        "linux": {
            "icon": "assets/icon.png",
            "target": "AppImage"
        }
    },
    "devDependencies": {
        "electron": "^35.0.2",
        "electron-builder": "^25.1.8"
    }
}
