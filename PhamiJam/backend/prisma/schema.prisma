generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model User {
  id        Int        @id @default(autoincrement())
  username  String
  password  String
  email     String     @unique
  avatar    String
  playlists Playlist[]
}

model Playlist {
  id          Int    @id @default(autoincrement())
  title       String
  coverArt    String
  description String
  userId      Int
  songs       Song[]
  User        User   @relation(fields: [userId], references: [id])
}

model Song {
  id         Int       @id @default(autoincrement())
  title      String
  Playlist   Playlist? @relation(fields: [playlistId], references: [id])
  playlistId Int?
}
